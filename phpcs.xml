<?xml version="1.0"?>
<ruleset name="SimpleSAMLphp ratelimit module ruleset">
    <config name="ignore_warnings_on_exit" value="1"/>

    <description>
        By default it is less stringent about long lines than other coding standards
    </description>

    <file>src</file>
    <file>tests</file>
    <file>templates</file>

    <!-- Use this to exclude paths. You can have multiple patterns -->
    <exclude-pattern>tests/config/config.php</exclude-pattern>
    <exclude-pattern>tests/bootstrap.php</exclude-pattern>
    <exclude-pattern>tests/tmp</exclude-pattern>
    <exclude-pattern>tests/docker</exclude-pattern>

    <!-- This is the rule we inherit from. If you want to exlude some specific rules, see the docs on how to do that -->
    <rule ref="PSR12"/>
</ruleset>

